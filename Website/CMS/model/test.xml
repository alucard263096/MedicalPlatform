<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>Test Example</name>
  <tablename>tb_test</tablename>
  <nolist>0</nolist>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>Seq</name>
      <key>seq</key>
      <type>number</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <disableindetail>0</disableindetail>
    </field>
    <field>
      <name>Category</name>
      <key>cate_id</key>
      <type>fkey</type>
      <displayfield>name</displayfield>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
      <tablename>tb_test_category</tablename>
      <ntbname>r_cate</ntbname>
      <condition>r_cate.status='A'</condition>
    </field>
    <field>
      <name>Name</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>Summary</name>
      <key>summary</key>
      <type>longtext</type>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>Content</name>
      <key>content</key>
      <type>html</type>
    </field>
    <field>
      <name>Is Male</name>
      <key>is_check</key>
      <type>check</type>
      <displayinlist>1</displayinlist>
      <yvalue>Yes</yvalue>
      <nvalue>No</nvalue>
    </field>
    <field>
      <name>Image Upload</name>
      <key>logo</key>
      <type>upload</type>
      <uploadmodule>test</uploadmodule>
    </field>
    <field>
      <name>Applied Date</name>
      <key>applied_date</key>
      <type>datetime</type>
      <displayinlist>1</displayinlist>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>Status</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
</root>