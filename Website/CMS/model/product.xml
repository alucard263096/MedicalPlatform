<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>下载分类</name>
  <tablename>tb_product</tablename>
  <nolist>0</nolist>
  <searchcondition>r_main.status&lt;&gt;'D' </searchcondition>
  <fields>
    <field>
      <name>下载分类</name>
      <key>category_id</key>
      <type>fkey</type>
      <displayfield>name</displayfield>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
      <tablename>tb_product_category</tablename>
      <ntbname>r_cate</ntbname>
      <condition>r_cate.status='A'</condition>
    </field>
    <field>
      <name>序号</name>
      <key>seq</key>
      <type>number</type>
      <notnull>1</notnull>
      <disableindetail>0</disableindetail>
    </field>
    <field>
      <name>名称</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>产品简介</name>
      <key>summary</key>
      <type>longtext</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>内容</name>
      <key>content</key>
      <type>html</type>
    </field>
    <field>
      <name>产品图片</name>
      <key>logo</key>
      <type>upload</type>
      <uploadmodule>product</uploadmodule>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
</root>