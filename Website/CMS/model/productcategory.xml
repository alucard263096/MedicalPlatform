<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>产品分类</name>
  <tablename>tb_product_category</tablename>
  <nolist>0</nolist>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>序号</name>
      <key>seq</key>
      <type>number</type>
      <notnull>1</notnull>
      <disableindetail>0</disableindetail>
    </field>
    <field>
      <name>分类名称</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>产品</name>
      <key>productlist</key>
      <type>grid</type>
      <api>Content/product.php?action=getgrid&amp;category_id=</api>
      <newitemurl>Content/product.php?action=add</newitemurl>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
</root>