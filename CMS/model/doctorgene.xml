<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>医生基因检测服务</name>
  <tablename>dr_tb_doctor_gene</tablename>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>基因检测服务</name>
      <key>gene_id</key>
      <type>fkey</type>
      <fmutillang>1</fmutillang>
      <displayfield>name</displayfield>
      <tablename>dr_tb_gene</tablename>
      <ntbname>r_gene</ntbname>
      <condition>r_gene.status='A' </condition>
      <search>1</search>
      <gotodetail>1</gotodetail>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
      <notnull>1</notnull>
    </field>
    <field>
      <name>提供服务的医生</name>
      <key>doctor_list</key>
      <type>flist</type>
      <displayfield>name</displayfield>
      <fmutillang>1</fmutillang>
      <notnull>1</notnull>
      <displayinlist>1</displayinlist>
      <tablename>dr_tb_doctor</tablename>
      <ntbname>r_doctor_list</ntbname>
      <condition>r_doctor_list.status='A'  </condition>
    </field>
    <field>
      <name>备注</name>
      <key>remarks</key>
      <type>longtext</type>
      <displayinlist>1</displayinlist>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
    </option>
  </options>
</root>