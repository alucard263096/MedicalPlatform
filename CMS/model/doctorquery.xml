<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>用户提问</name>
  <tablename>dr_tb_member_question</tablename>
  <searchcondition> r_main.status&lt;&gt;'D' and  doctor_id=0 </searchcondition>
  <fields>
    <field>
      <name>会员姓名</name>
      <key>member_name</key>
      <type>text</type>
      <gotodetail>1</gotodetail>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>会员电话</name>
      <key>member_mobile</key>
      <type>text</type>
      <gotodetail>1</gotodetail>
      <displayinlist>1</displayinlist>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>问题描述</name>
      <key>description</key>
      <type>longtext</type>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>性别</name>
      <key>is_male</key>
      <type>select</type>
      <options>
        <option>
          <name>男性</name>
          <value>Y</value>
        </option>
        <option>
          <name>女性</name>
          <value>N</value>
        </option>
      </options>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>年龄</name>
      <key>age</key>
      <type>text</type>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>附件1</name>
      <key>img_1</key>
      <type>upload</type>
      <uploadmodule>clientquery</uploadmodule>
    </field>
    <field>
      <name>附件2</name>
      <key>img_2</key>
      <type>upload</type>
      <uploadmodule>clientquery</uploadmodule>
    </field>
    <field>
      <name>附件3</name>
      <key>img_3</key>
      <type>upload</type>
      <uploadmodule>
        clientquery
      </uploadmodule>
    </field>
    <field>
      <name>提交日期</name>
      <key>submit_date</key>
      <type>datetime</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>等待处理</name>
          <value>P</value>
          <default>1</default>
        </option>
        <option>
          <name>已处理</name>
          <value>F</value>
        </option>
        <option>
          <name>不处理</name>
          <value>N</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>处理备注</name>
      <key>remarks</key>
      <type>longtext</type>
    </field>
  </fields>
</root>